{
  "name": "dev-infa",
  "version": "0.0.1",
  "description": "Infrastructure for development",
  "license": "Apache-2.0",
  "scripts": {
    "cz": "cz",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "~19.2.0",
    "@commitlint/cz-commitlint": "~19.2.0",
    "commitizen": "~4.3.0",
    "commitlint": "~19.3.0",
    "husky": "~9.0.11"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "commitlint": {
    "extends": "@commitlint/config-conventional",
    "rules": {
      "scope-enum": [
        2,
        "always",
        [
          "deps",
          "frontend",
          "lib",
          "service"
        ]
      ]
    }
  }
}
